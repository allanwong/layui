<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Layui</title>
    <link rel="stylesheet" href="~/Scripts/layui/css/layui.css">
    <link rel="stylesheet" href="~/Content/home.css">
</head>
<body>
    <div class="layui-header header header-doc">
        <div class="layui-main ">
            @Html.ActionLink("LAYUI NET DEMO", "Index", "Home", null, new { @class = "logo" })
            <ul id="menu-main" class="layui-nav">
                <li id="menu-home" class="layui-nav-item">
                    @Html.ActionLink("主页", "Index", "Home")
                </li>
                <li id="menu-about" class="layui-nav-item ">
                    @Html.ActionLink("关于", "About", "Home")
                </li>
                <li id="menu-contact" class="layui-nav-item">
                    @Html.ActionLink("联系方式", "Contact", "Home")
                </li>
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div>

     
    <div class="layui-main site-inline">
        <div class="site-content">
            @RenderBody()
        </div>
        <hr />
        <footer>
             <p>&copy; @DateTime.Now.Year - Layui ASP.NET Demo</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/layui/layui.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
