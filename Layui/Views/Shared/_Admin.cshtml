<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Layui</title>
    <link rel="stylesheet" href="~/Scripts/layui/css/layui.css">
    <link rel="stylesheet" href="~/Content/admin.css">
</head>
<body>
    <div class="layui-layout layui-layout-admin">
        <div class="layui-header header header-demo">
            <div class="layui-main ">
                @Html.ActionLink("LAYUI NET DEMO", "Index", "Default", null, new { @class = "logo" })
                @Html.Partial("_top")
                <ul id="menu-right" class="layui-nav">
                    <li class="layui-nav-item">
                        <a href="~/Account/Manage" title="更改密码">你好 @User.Identity.Name !</a>
                    </li>
                    <li class="layui-nav-item"><a href="javascript:document.getElementById('logoutForm').submit()">注销</a></li>
                </ul>
            </div>
        </div>
        <div class="layui-side layui-bg-black">
            <div class="layui-side-scroll">
                @Html.Partial("_left")
            </div>
        </div>
        <div class="layui-body site-demo">
            <div class="layui-main site-inline">
                <div class="site-content">
                    @RenderBody()
                </div>
            </div>
        </div>
        <div class="layui-footer footer footer-demo">
            <div class="layui-main">
                <p>&copy; @DateTime.Now.Year - Layui ASP.NET Demo</p>
            </div>
        </div>
        <div class="site-tree-mobile layui-hide">
            <i class="layui-icon"></i>
        </div>
        <div class="site-mobile-shade"></div>
    </div>
    <ul class="layui-fixbar">
        <li class="layui-icon" lay-type="bar1" style=""></li>
        <li class="layui-icon layui-fixbar-top" lay-type="top" style=""></li>
    </ul>
    <form id="logoutForm" name="logoutForm" action="~/Account/LogOff" method="post" class="layui-form">@Html.AntiForgeryToken()</form>
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/layui/layui.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
